<header class="flex flex-col gap-8">
  <div class="flex items-center gap-4">
    <div
      class="relative flex size-24 shrink-0 overflow-hidden rounded-full border border-white shadow-md shadow-slate-200"
    >
      <Image
        alt="Portrait of Giulia Cantini"
        class="block aspect-square h-full w-full object-cover"
        loading="eager"
        src={PortraitImage}
      />
    </div>
    <div class="space-y-1">
      <div>
        <h1 class="flex scroll-m-20 text-2xl font-semibold tracking-tight">
          Giulia Cantini
        </h1>
        <div class="text-sm text-slate-500">
          <p>Doctoral Researcher in computational biology based in Munich, Germany.</p>
        </div>
      </div>
      <WorkTag />
    </div>
  </div>

